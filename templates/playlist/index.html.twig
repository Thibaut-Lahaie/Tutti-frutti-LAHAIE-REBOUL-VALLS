{% extends 'base.html.twig' %}

{% block title %}Hello PlaylistController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello ✅</h1>

        <table class="table table-bordered">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th width="240px">Action</th>
            </tr>
            {% for playlist in playlists %}
                <tr>
                    <td>{{ playlist.musique.reference }}</td>
                    <td>{{ playlist.utilisateur.username }}</td>
                    <td>
                        <form method="post" action="{{ path('app_playlist_delete', {'id': playlist.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <a
                                    class="btn btn-outline-info"
                                    href="{{ path('musique_show', {'id': playlist.musique.id}) }}">
                                Détails
                            </a>

                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ playlist.id) }}">
                            <button class="btn btn-outline-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </table>

    </div>
{% endblock %}
