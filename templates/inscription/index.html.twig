{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>
    {# Ajouter un message d'information sur la forme que doit avec le mot de passe, username #}

    {{ form_start(form) }}

    <div>
        <p>Le pseudo doit contenir 3 caractères au minimum. </p>
        {{ form_label(form.username, 'Nom d\'utilisateur') }}
        {{ form_widget(form.username) }}
    </div>

    <div>
        <p>Le mot de passe doit contenir au moins une majuscule, une minuscule, un chiffre et un caractère spécial. </p>
        {{ form_label(form.password, 'Mot de passe') }}
        {{ form_widget(form.password) }}
    </div>

    <div>
        <p>Veuillez saisir une adresse-mail valide</p>
        {{ form_label(form.email, 'Adresse Email') }}
        {{ form_widget(form.email) }}
    </div>

    <button type="submit">S'inscrire</button>
    <a href="{{ path('app_home') }}" class="btn btn-primary">Retour</a>


    {{ form_end(form) }}
{% endblock %}
