{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Tutti Frutti !{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! ✅</h1>

        Prêt à écouter le son des fruits ?
    </div>

    {% if not app.user %}
        <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
        <a href="{{ path('app_inscription') }}" class="btn btn-primary">S'inscrire</a>
    {% else %}
        <a href="{{ path('app_logout') }}" class="btn btn-primary">Se déconnecter</a>
        <a href="{{ path('app_logout') }}" class="btn btn-primary">Se déconnecter</a>
    {% endif %}
{% endblock %}
