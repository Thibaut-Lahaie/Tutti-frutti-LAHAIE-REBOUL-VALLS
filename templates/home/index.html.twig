{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Tutti Frutti !{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! ✅</h1>

        Prêt à écouter le son des fruits ?
    </div>

    {% if musiqueAleatoire %}
        <h2>Titre aléatoire</h2>
        <p>{{ musiqueAleatoire.reference }}</p>
        <img src="{{ musiqueAleatoire.image }}" alt="{{ musiqueAleatoire.reference }}" width="200">


    {% else %}
        <p>Aucun album n'est disponible pour le moment.</p>

    {% endif %}
{% endblock %}
